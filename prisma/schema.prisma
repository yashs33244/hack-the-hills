generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  wallets   Wallet[]
}

model Wallet {
  id        String   @id @default(cuid())
  publicKey String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String // "solana" or "ethereum"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([publicKey, type])
}
